SHOPEE_DOMAIN=shopee.com.br
REQUESTS_PER_MINUTE=60
CONCURRENCY=4
PROXY_URL=
USER_AGENT=
COOKIE_STRING=
ACCEPT_LANGUAGE=en-US,en;q=0.9
TIMEOUT_MS=12000
DEBUG=false

# Prisma connection string (choose one)
# - MySQL via Docker (default for local dev)
DATABASE_URL="mysql://shopee:shopee@localhost:3306/shopee"
# - SQLite fallback (uncomment to use)
# DATABASE_URL="file:./prisma/dev.db"

# Optional MySQL envs used by docker-compose
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DATABASE=shopee
MYSQL_USER=shopee
MYSQL_PASSWORD=shopee
