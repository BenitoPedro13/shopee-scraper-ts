{
  "name": "shopee-scraper-ts",
  "version": "0.1.0",
  "private": true,
  "description": "HTTP-first, TypeScript scraper for Shopee (no Playwright)",
  "type": "module",
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "lint": "echo 'add eslint later'",
    "db:up": "docker compose up -d mysql",
    "db:down": "docker compose down",
    "chrome:headless": "node scripts/launch-chrome.mjs headless",
    "chrome:headful:min": "node scripts/launch-chrome.mjs headful",
    "cdp:open": "tsx src/cdp-open.ts",
    "cdp:search": "tsx src/shopee/core/search-products.ts",
    "cdp:pdp": "tsx src/shopee/core/pdp-products.ts",
    "prisma:generate": "prisma generate",
    "prisma:push": "prisma db push --accept-data-loss",
    "prisma:migrate": "prisma migrate dev --name init",
    "prisma:studio": "prisma studio"
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "cheerio": "^1.0.0",
    "chrome-remote-interface": "^0.33.3",
    "dotenv": "^16.4.5",
    "got": "^14.4.1",
    "http-proxy-agent": "^7.0.2",
    "https-proxy-agent": "^7.0.6",
    "p-queue": "^8.0.1",
    "proxy-agent": "^6.4.0",
    "tough-cookie": "^4.1.4",
    "undici": "^7.15.0",
    "@prisma/client": "^5.19.0"
  },
  "devDependencies": {
    "prisma": "^5.19.0",
    "@types/chrome-remote-interface": "^0.31.14",
    "@types/node": "^24.3.0",
    "@types/tough-cookie": "^4.0.5",
    "devtools-protocol": "^0.0.1505444",
    "tsx": "^4.19.0",
    "typescript": "^5.6.2"
  }
}
